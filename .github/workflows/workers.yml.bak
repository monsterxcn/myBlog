name: Deploy2Workers

on:
  push:
    branches:
      - master

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v2

      - name: Setup Node.js
        uses: actions/setup-node@v1
        with:
          node-version: '12.x'

      - name: Cache gridsome modules
        uses: actions/cache@v1
        env:
          cache-name: blog-node-modules
        with:
          path: node_modules
          key: ${{ runner.os }}-${{ env.cache-name }}-${{ hashFiles('package-lock.json') }}
    
      - name: Cache workers-site modules
        uses: actions/cache@v1
        env:
          cache-name: workers-node-modules
        with:
          path: workers-site/node_modules
          key: ${{ runner.os }}-${{ env.cache-name }}-${{ hashFiles('workers-site/package-lock.json') }}

      - name: Install modules
        run: yarn install

      - name: Build statics
        run: yarn build

      - name: Deploy statics
        uses: cloudflare/wrangler-action@1.1.0
        with:
          apiToken: ${{ secrets.CF_WORKERS_TOKEN }}